{
	"include": ["*.js", "etc/*.js", "example/*.js", "src/**/*.ts", "test/**/*.js"],
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"checkJs": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"noImplicitOverride": true,
		"resolveJsonModule": true,
		"strict": true,
		"target": "ESNext"
	}
}
