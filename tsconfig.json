{
	"include": ["*.js", "bin/*.js", "example/*.js", "src/**/*.ts", "test/**/*.js"],
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"checkJs": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"noImplicitOverride": true,
		"resolveJsonModule": true,
		"strict": true,
		"target": "ESNext",
		"verbatimModuleSyntax": true
	}
}
