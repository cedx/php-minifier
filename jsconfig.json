{
	"include": ["*.js", "example/*.js", "src/**/*.js", "test/**/*.js"],
	"compilerOptions": {
		"baseUrl": ".",
		"checkJs": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"paths": {"@cedx/gulp-php-minify": ["src"]},
		"rootDir": "./src",
		"strict": true,
		"target": "ESNext"
	}
}
