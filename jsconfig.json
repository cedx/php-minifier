{
	"include": ["*.js", "example/*.js", "lib/**/*.js", "test/**/*.js"],
	"compilerOptions": {
		"baseUrl": ".",
		"checkJs": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"paths": {"@cedx/gulp-php-minify": ["lib"]},
		"strict": true,
		"target": "es2022"
	}
}
